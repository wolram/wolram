# Arquivo de configuração do WOLRAM
# Copie este arquivo para wolram.toml e edite conforme necessário.
# A chave da API também pode ser definida via variável de ambiente ANTHROPIC_API_KEY (tem precedência).

# api_key = "sk-ant-..."

# Nível de modelo padrão: haiku, sonnet, opus
default_model_tier = "sonnet"

# Número máximo de retentativas antes de marcar um job como falho
max_retries = 3

# Atraso base em milissegundos para backoff exponencial
base_delay_ms = 1000
